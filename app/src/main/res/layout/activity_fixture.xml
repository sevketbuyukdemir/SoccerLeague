<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/fixture_layout_background_color"
    android:orientation="vertical"
    tools:context=".FixtureActivity">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/iv_network_image_fixture_activity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"/>
        <TextView
            android:id="@+id/tv_network_image_fixture_activity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textColor="@color/tv_network_text_color"/>
    </LinearLayout>
    <com.google.android.material.tabs.TabLayout
        android:id="@+id/fixture_tab_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/fixture_layout_tab_layout_background_color"
        app:tabTextColor="@color/fixture_layout_tab_layout_text_color"
        app:tabSelectedTextColor="@color/fixture_layout_tab_layout_selected_text_color"
        app:tabMode="scrollable"
        android:minHeight="?attr/actionBarSize" />

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/fixture_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>